<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- 登录界面 -->
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.wust.secondhand.controllers.LoginController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20;" prefWidth="350" prefHeight="300">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="校园二手交易系统" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <TextField fx:id="usernameField" promptText="用户名" maxWidth="250" prefHeight="40"/>
    <PasswordField fx:id="passwordField" promptText="密码" maxWidth="250" prefHeight="40"/>
  
    <HBox alignment="CENTER" spacing="20" maxWidth="250">
        <Button text="登录" onAction="#handleLogin" prefWidth="100" prefHeight="35"/>
        <Button text="注册" onAction="#handleShowRegisterView" prefWidth="100" prefHeight="35"/>
    </HBox>

    <Label fx:id="errorMessage" style="-fx-text-fill: red;"/>
</VBox>