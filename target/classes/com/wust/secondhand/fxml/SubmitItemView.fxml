<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<!-- 用户物品提交页面 -->
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.wust.secondhand.controllers.SubmitItemController"
          hgap="10" vgap="10" style="-fx-padding: 20;">
    <Label text="物品名称:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="数量:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="quantityField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="描述:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextArea fx:id="descriptionArea" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3"/>

    <Label text="交易地点:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="locationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="联系方式:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="contactField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="图片:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <HBox spacing="10" GridPane.rowIndex="5" GridPane.columnIndex="1">
        <Button text="选择图片..." onAction="#handleChooseImage"/>
    </HBox>
    <ImageView fx:id="imagePreview" fitHeight="100" fitWidth="100" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Label text="交易类型:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="tradeTypeChoiceBox" layoutX="1.0" layoutY="2.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="出售" />
                <String fx:value="出租" />
            </FXCollections>
        </items>
        <value>
            <String fx:value="出售" />
        </value>
    </ChoiceBox>
    <Label text="校区:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="campusChoiceBox" layoutX="1.0" layoutY="2.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="黄家湖校区" />
                <String fx:value="青山校区" />
            </FXCollections>
        </items>
        <value>
            <String fx:value="黄家湖校区" />
        </value>
    </ChoiceBox>
    <Button fx:id="submitButton" text="提交" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER" onAction="#handleSubmit"/>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
</GridPane>
