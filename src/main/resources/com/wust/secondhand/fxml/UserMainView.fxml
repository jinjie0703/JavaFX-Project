<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 用户操作界面 -->
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wust.secondhand.controllers.UserMainViewController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <!-- 欢迎语和发布按钮 -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label fx:id="welcomeLabel">
                            <font><Font size="14.0" /></font>
                        </Label>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleSubmitNewItem" text="发布我的二手物品" />
                    </children>
                </HBox>
                <!-- 搜索栏 -->
                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 8px 10px;">
                    <children>
                        <Label text="搜索市场:" />
                        <TextField fx:id="searchField" HBox.hgrow="ALWAYS" promptText="输入物品名称、描述或联系方式中的关键字..." />
                        <Button mnemonicParsing="false" onAction="#handleSearch" text="搜索" />
                        <Button mnemonicParsing="false" onAction="#handleClearSearch" text="清空" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <!-- 使用TabPane来切换视图 -->
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <!-- 第一个标签页：浏览所有商品 -->
                <Tab text="浏览市场">
                    <content>
                        <TableView fx:id="marketItemsTable">
                            <columns>
                                <TableColumn fx:id="marketNameCol" prefWidth="150.0" text="名称" />
                                <TableColumn fx:id="marketDescCol" prefWidth="350.0" text="描述" />
                                <TableColumn fx:id="marketContactCol" prefWidth="120.0" text="联系方式" />
                                <TableColumn fx:id="marketOwnerCol" prefWidth="120.0" text="发布者" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <!-- 第二个标签页：管理我的发布 -->
                <Tab text="我的发布">
                    <content>
                        <VBox spacing="10.0">
                            <padding><Insets top="10.0" left="10.0" right="10.0" bottom="10.0" /></padding>
                            <children>
                                <TableView fx:id="myItemsTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="myNameCol" prefWidth="150.0" text="名称" />
                                        <TableColumn fx:id="myStatusCol" prefWidth="100.0" text="状态" />
                                        <TableColumn fx:id="myDescCol" prefWidth="400.0" text="描述" />
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleDeleteMyItem" style="-fx-background-color: #d9534f;" text="删除选中项 (交易完成)" textFill="WHITE" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>