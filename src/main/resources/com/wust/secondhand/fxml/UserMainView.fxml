<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 用户操作界面 -->

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wust.secondhand.controllers.UserMainViewController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <!-- 欢迎语和发布按钮 -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label fx:id="welcomeLabel">
                            <font><Font size="14.0" /></font>
                        </Label>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleSubmitNewItem" text="发布我的二手物品" />
                        <!-- 退出登录按钮 -->
                        <Button mnemonicParsing="false" onAction="#handleLogout" text="退出登录" style="-fx-background-color: #6c757d;" textFill="WHITE" />
                    </children>
                </HBox>
                <!-- 搜索栏 -->
                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 8px 10px;">
                    <children>
                        <Label text="搜索市场:" />
                        <TextField fx:id="searchField" promptText="输入物品名称、描述或联系方式中的关键字..." HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleSearch" text="搜索" />
                        <Button mnemonicParsing="false" onAction="#handleClearSearch" text="清空" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <!-- 左侧TabPane -->
                <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" prefWidth="500.0">
                    <tabs>
                        <!-- 第一个标签页：浏览所有商品 -->
                        <Tab text="浏览市场">
                            <content>
                                <TableView fx:id="marketItemsTable" onMouseClicked="#handleMarketTableClick">
                                    <columns>
                                        <TableColumn fx:id="marketNameCol" prefWidth="110.0" text="名称" />
                                        <TableColumn fx:id="marketDescCol" prefWidth="212.0" text="描述" />
                                        <TableColumn fx:id="marketContactCol" prefWidth="150.0" text="联系方式" />
                                        <TableColumn prefWidth="76.0" text="交易类型" />
                                        <TableColumn prefWidth="111.0" text="校区" />
                                        <TableColumn fx:id="marketOwnerCol" prefWidth="137.0" text="发布者" />
                                    </columns>
                                </TableView>
                            </content>
                        </Tab>
                        <!-- 第二个标签页：管理我的发布 -->
                        <Tab text="我的发布">
                            <content>
                                <VBox spacing="10.0">
                                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                                    <children>
                                        <TableView fx:id="myItemsTable" prefHeight="462.0" prefWidth="814.0" VBox.vgrow="ALWAYS" onMouseClicked="#handleMyTableClick">
                                            <columns>
                                                <TableColumn fx:id="myNameCol" prefWidth="150.0" text="名称" />
                                                <TableColumn fx:id="myStatusCol" prefWidth="100.0" text="状态" />
                                                <TableColumn fx:id="myDescCol" prefWidth="333.0" text="描述" />
                                                <TableColumn prefWidth="95.0" text="交易类型" />
                                                <TableColumn prefWidth="122.0" text="校区" />
                                            </columns>
                                        </TableView>
                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#handleDeleteMyItem" style="-fx-background-color: #d9534f;" text="删除选中项 (交易完成)" textFill="WHITE" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <!-- 右侧详情栏 -->
                <VBox fx:id="detailsPane" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1;" prefWidth="280.0" minWidth="220.0" maxWidth="350.0">
                    <padding><Insets top="15.0" left="15.0" right="15.0" bottom="15.0"/></padding>
                    <children>
                        <Label text="物品详情" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label fx:id="detailsNameLabel" text="名称: " />
                        <Label fx:id="detailsDescLabel" text="描述: " wrapText="true" />
                        <Label fx:id="detailsContactLabel" text="联系方式: " />
                        <Label fx:id="detailsOwnerLabel" text="发布者: " />
                        <Label fx:id="detailsStatusLabel" text="状态: " />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
